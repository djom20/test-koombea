<h2>Find Tips by Name</h2>

<div class="row" >
<div class="well span3 offset4" >

    <%= form_tag nil, :method => :get do %>

      <%= label_tag "Name of venue:" %>
      <%= text_field_tag "name", params[:name] %>
      <%= submit_tag "search", :id => "idbutton_venues", :class => "btn btn-success" %>        
    <% end %>
  </div>
</div>


<% if !@tips_found.nil? %>

<%  if (@tips_found.items.size == 0) then %>
<b>No results</b>
<% else %>

<h3>Results</h3>
<br>
<table class="table table-striped table-bordered table-condensed">
<tr>
<th>Text</th>
<th>firstName</th>
<th>lastName</th>
<th>Create At</th>
</tr>


<%  if (@tips_found.items.size == 0) then %>
<b>No results</b>
<% else %>

<% @tips_found.items.each do |it| %>
<tr>
<td><%= it["text"] %></td>
<td><%= it["user"]["firstName"] %></td>
<td><%= it["user"]["lastName"] %></td>
<td><%= it["createdAt"] %></td>
</tr>
<% end %>

</table>
<% end %>
<% end %>
<% end %>