
<h2>Find User Badges</h2>

<div class="row" >
<div class="well span3 offset4" >

    <%= form_tag nil, :method => :get do %>
      <%= label_tag "Type your email:" %>
      <%= text_field_tag "email", params[:email] %>
      <%= submit_tag "search", :id => "idbutton_friends", :class => "btn btn-success" %>        
    <% end %>
  </div>
</div>

<% if !@badges_found.nil? %>
<%= @badges_found.to_json %>
<% end %>



