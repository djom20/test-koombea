<h2>Find venues by Name</h2>

<div class="row" >
<div class="well span3 offset4" >

    <%= form_tag nil, :method => :get do %>

      <%= label_tag "Name of venue:" %>
      <%= text_field_tag "name", params[:name] %>
      <%= submit_tag "search", :id => "idbutton_venues", :class => "btn btn-success" %>        
    <% end %>
  </div>
</div>

<% if !@venues_found.nil? %>

<%  if (@venues_found.groups.size == 0) then %>
<b>No results</b>
<% else %>

<h3>Results</h3>
<br>
<table class="table table-striped table-bordered table-condensed">
<tr>
<th>Name</th>
<th>Address</th>
<th>City</th>
<th>Country</th>
<th>Phone</th>
</tr>

<% @venues_found.groups.each do |venue| %>
<%  items = venue["items"] %>

<%  if (items.size == 0) then %>
<b>No results</b>
<% else %>

<% items.each do |it| %>
<tr>
<td><%= it["name"] %></td>
<td><%= it["location"]["address"] %></td>
<td><%= it["location"]["city"] %></td>
<td><%= it["location"]["country"] %></td>
<td><%= it["contact"]["phone"] %></td>
</tr>
<% end %>
<% end %>
<% end %>

</table>
<% end %>
<% end %>
